extends layout/layout
block content
    .container
        .row
            .col-12
                .sub-menu
                    ul.sub-02
                        li
                            a.active 聯絡我們
                .main.contact
                    .column-left
                        span 聯絡 / 諮詢
                        form(target="_blank" action='https://formspree.io/mqkbklna' method='POST')
                            input(type="text" name='name' placeholder="名稱 / 公司")
                            input(type="text" name="topic" placeholder="主旨")
                            input(type="email" placeholder="電子信箱" name='_replyto')
                            textarea(type="text" name='message' placeholder="訊息")
                            input.btn.btn-primary(type='submit' value='送出')

                    .column-right
                        .item
                            img(src="../assets/img/location.svg" alt="location")
                            p
                                |瑞志實業股份有限公司
                                br
                                |台灣 台北
                        .item
                            img(src="../assets/img/phone.svg" alt="phone")
                            p
                                |+886
                                br
                                | 02 87730128
                        .item
                            img(src="../assets/img/email.svg" alt="email")
                            p
                                |zuitop_client@
